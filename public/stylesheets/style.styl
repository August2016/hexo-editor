html
  height 100%

body
  margin 0
  width 100%
  height 100%
  font "Lucida Grande", Helvetica, Arial, sans-serif
  background-color #eceff1

@font-face
  font-family 'Material Icons'
  font-style normal
  font-weight 400
  src local('Material Icons'), local('MaterialIcons-Regular'), url(/font/2fcrYFNaTjcS6g4U3t-Y5ZjZjT5FdEJ140U2DJYC3mY.woff2) format('woff2')

@media only screen and (max-device-width: 480px) {
  #content {
    display none
  }
  body::before {
    content 'Not supported yet.'
  }
}

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  width 24px
  line-height 1
  letter-spacing normal
  text-transform none
  display inline-block
  word-wrap normal
  -webkit-font-feature-settings 'liga'
  -webkit-font-smoothing antialiased

ul
  margin 0
  padding 0
  list-style-type none

li
  margin 0
  padding 0
  .red
    color #D50000
  .yellow
    color #FF9800
  .green
    color #AEEA00

header
  position fixed
  margin 0 auto
  top 0
  width 100%
  height 3.6em
  background-color #673AB7
  z-index 97
  display inline-block
  vertical-align text-bottom
  i
    color white
  ul
    height 100%
    margin-left 3em
    li
      float right
      height 100%
  .menu-btn
    position absolute
    top 0
    bottom 0
    margin auto
    margin-left 0.8em
  .left-title
    position absolute
    margin-left 4em
    height 100%
    .mdl-button
      padding 8px
      color white
      font-size 1.3em
  #done
    padding 12px
    font-size 1.3em
    i
      color #AEEA00
  .right-title
    .mdl-button
      padding 9px
      color white
      user-select none
      -moz-user-select none
      -khtml-user-select none
      -webkit-user-select none
      -o-user-select none
    #loading
      display none
      padding 10px

#logo
  background url(/img/logo.svg)
  width 60px
  height 60px
  background-size 60px 60px
  display inline-block

#logo-title
  margin-left 0px

#login-form-wapper
  margin 0
  height 92%

#login-form
  position relative
  top 16%
  margin 0 auto
  padding 0.5em
  width 30em
  background rgb(255,255,255)
  color #333
  text-align center

.row
  input
    height 2em
  button
    margin-bottom 1.5em

#content
  height 99%

#sub-menu
  position relative
  margin-top 0px
  width 15%
  float left
  .item
    cursor pointer

#main
  position relative
  margin-top 3.7em

#left
  position fixed
  display block
  margin-top 3.7em
  width 14%
  height 90%
  overflow-y auto
  z-index 9999
  .left-menu
    width 100%
    margin 0
    .active
      background-color #E0E0E0
      a
        margin-left 10px
        color #616161
        font-weight bold
  .left-menu-row
    cursor pointer
    height 24px
    margin 0 10px 0 10px
    padding 12px
    border-radius 5px
    i
      float left
    a
      margin-left 10px
      color #616161
    &:hover
      background-color #E0E0E0

#shadow-mask
  position fixed
  display none
  opacity 0.4
  background-color black
  z-index 98
  width 100%
  height 100%
