extends layout

block content
  header.mdl-shadow--6dp
    button.mdl-button.mdl-js-button.mdl-button--icon.menu-btn(id='menu-btn')
      i.material-icons menu
    .left-title
      a.mdl-button.mdl-js-button.mdl-js-ripple-effect Posts
    ul
      li.right-title
        a.mdl-button.mdl-js-button.mdl-button--icon(onclick='exit();')
          i.material-icons exit_to_app
  #progress-wapper
    #progress.mdl-progress.mdl-js-progress.mdl-progress__indeterminate
  #left
    ul.left-menu
      li.left-menu-row.active
        i.material-icons(style='color:#00BCD4;') description
        a.left-title Posts
      li.left-menu-row
        i.material-icons(style='color:#FF9800;') folder
        a.left-title Drafts
      li.left-menu-row
        i.material-icons(style='color:#795548;') delete
        a.left-title Trash
      li.left-menu-row
        i.material-icons(style='color:#673AB7;') settings
        a.left-title Settings
  #main
    include posts.jade
  script.
    $('#menu-btn').click(function() {
      if ($('#left').css('display') === 'none') {
        $('#left').show();
      } else {
        $('#left').hide();
      }
    });
