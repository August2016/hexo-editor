extends layout

block content
  #login-form-wapper
    #login-form
      .row
        .col
          h5 Welcome to Hexo Editor!
        .row
        form.grey-text.s12(action='login', method='POST')
          .row
            .input-field.col.s12
              label(for='first_name') User Name
              input.validate(type='text', name="username")
          .row
            .input-field.col.s12
              label(for='password') Password
              input.validate(type='password', name="password")
          button.btn.grey.waves-effect.waves-light(type='submit')
            | LOGIN
            i.material-icons.right send
